{
  "name": "nanogen",
  "version": "0.1.0",
  "description": "Minimal static site generator CLI for Node.js",
  "type": "module",
  "main": "nanogen.js",
  "exports": {
    ".": "./nanogen.js"
  },
  "types": "types/index.d.ts",
  "files": [
    "nanogen.js",
    "types",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "nanogen": "./nanogen.js"
  },
  "scripts": {
    "build": "node nanogen.js",
    "compile": "esbuild scripts/cli.ts --bundle --platform=node --outfile=nanogen.js --format=esm --external:chokidar --external:ejs --external:fs-extra --external:glob --external:json5 --external:serve-handler --external:lodash --external:marked --external:urijs",
    "serve": "serve ./public",
    "prepare": "npm run compile"
  },
  "keywords": [
    "static-site-generator",
    "markdown",
    "ejs",
    "cli",
    "ssg"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/doug2k1/nanogen.git"
  },
  "homepage": "https://github.com/doug2k1/nanogen#readme",
  "bugs": {
    "url": "https://github.com/doug2k1/nanogen/issues"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^5.0.0",
    "ejs": "^3.1.10",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "json5": "^2.2.3",
    "lodash": "^4.17.23",
    "marked": "^4.3.0",
    "serve-handler": "^6.1.6",
    "urijs": "^1.19.11"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.21",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.0.0",
    "@types/serve-handler": "^6.1.4",
    "@types/urijs": "^1.19.26",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
