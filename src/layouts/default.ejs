<!DOCTYPE html>
<html lang="en-US">
<head>
  <%- include('partials/head') %>
</head>
<body>
<section class="page-header">
  <h1 class="project-name"><%= page.title %></h1>
  <h2 class="project-tagline"><%= page.description %></h2>
  <a href="<%= pages.home.url %>" class="btn"><%= pages.home.menuTitle %></a>
  <a href="<%= pages.books.url %>" class="btn"><%= pages.books.menuTitle %></a>
</section>

<section class="main-content">
  <%- include('partials/breadcrumb') %>
  <%- contents.body %>

  <% if (page.children.length > 0) { %><ol>
    <% page.children.forEach(child => { %>
      <li class="<%= page === child ? 'active' : ''%>"><a href="<%= child.url %>"><%= child.title %></a></li>
    <% }) %>
  </ol><% } %>

  <footer class="site-footer">
    <span class="site-footer-credits">This page was generated by <a href="https://github.com/iMarti/nanogen">NanoGen</a>.</span>
  </footer>

</section>
</body>
</html>
